<div class="container">
    <div class="jumbotron m-4 text-center">
        <h1 class="display-4">Eat Da Burger!</h1>
        <hr class="my-4">
        <div class="row d-flex justify-content-around">
            <div class="col-lg">
            <div class="card">
                <div class="card-header">
                    Burgers ready to be devoured
                </div>
                <ul class="list-group list-group-flush m-3">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devour=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            </div>
            <div class="col-lg">
            <div class="card">
                <div class="card-header">
                    Devoured burgers
                </div>
                <ul class="list-group list-group-flush m-3">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devour=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center m-3">
            <div class="col-lg">
                <div class="card">
                    <div class="card-header">
                        Add a burger to be devoured
                    </div>
                    <div class="card-body">
                        <form class="create-form">
                            <div class="form-group">
                                <textarea class="form-control text-center" id="newBurger" row="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 